{% extends 'base.html.twig' %}

{% block title %}CandidateFile index{% endblock %}

{% block body %}
    <h1>CandidateFile index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>DateCreated</th>
                <th>DateUpdated</th>
                <th>DateDeleted</th>
                <th>Files</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for candidate_file in candidate_files %}
            <tr>
                <td>{{ candidate_file.id }}</td>
                <td>{{ candidate_file.dateCreated ? candidate_file.dateCreated|date('Y-m-d') : '' }}</td>
                <td>{{ candidate_file.dateUpdated ? candidate_file.dateUpdated|date('Y-m-d') : '' }}</td>
                <td>{{ candidate_file.dateDeleted ? candidate_file.dateDeleted|date('Y-m-d') : '' }}</td>
                <td>{{ candidate_file.files }}</td>
                <td>
                    <a href="{{ path('candidate_file_show', {'id': candidate_file.id}) }}">show</a>
                    <a href="{{ path('candidate_file_edit', {'id': candidate_file.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('candidate_file_new') }}">Create new</a>
{% endblock %}
